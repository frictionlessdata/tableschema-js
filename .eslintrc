extends:
  airbnb

env:
  es6: true
  node: true
  mocha: true
  browser: true

parserOptions:
  sourceType: module

rules:
  quotes:
    - error
    - single
    - avoid-escape
  semi:
    - error
    - never
  comma-style:
    - off
    - first
  comma-dangle:
    - off
    - never
  no-empty:
    - error
    - allowEmptyCatch: true
  no-use-before-define:
    - error
    - nofunc
  one-var:
    - off
    - var: always
      let: always
      const: always
  eqeqeq:
    - warn
    - smart
  no-unused-vars:
    - warn
  no-param-reassign:
    - off
  no-cond-assign:
    - error
    - except-parens
  arrow-parens:
    - error
    - as-needed
  class-methods-use-this:
    - off
  object-curly-spacing:
    - off
  padded-blocks:
    - off
  no-underscore-dangle:
    - off
  space-infix-ops:
    - off
  no-restricted-syntax:
    - off
  no-throw-literal:
    - off
  import/prefer-default-export:
    - off
